<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kary.karyplugin.dao.RankInformationMapper">
    <update id="addRankScore">
        update rank_information set score=score+1 where username=#{username}
    </update>

</mapper>
